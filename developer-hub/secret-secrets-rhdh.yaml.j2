# Rendered by install-gitops.yaml when Keycloak is operational.
# Do not commit the generated file (secret-secrets-rhdh.generated.yaml) - it is gitignored.
# Run the playbook to create this Secret in cluster; optionally generate with:
#   ansible-playbook -e "generate_rhdh_secret_manifest_only=1" install-gitops.yaml
---
kind: Secret
apiVersion: v1
metadata:
  name: secrets-rhdh
  namespace: developer-hub
data:
  KEYCLOAK_CLIENT_ID: {{ rhdh_keycloak_client_id | b64encode }}
  KEYCLOAK_REALM: {{ rhdh_keycloak_realm | b64encode }}
  KEYCLOAK_CLIENT_SECRET: {{ rhdh_keycloak_client_secret | b64encode }}
  CLIENT_ID: {{ rhdh_client_id | b64encode }}
  CLIENT_SECRET: {{ rhdh_keycloak_client_secret | b64encode }}
  KEYCLOAK_BASE_URL: {{ rhdh_keycloak_base_url | b64encode }}
  KEYCLOAK_METADATA_URL: {{ rhdh_keycloak_metadata_url | b64encode }}
  RHDH_BASE_URL: {{ rhdh_base_url | b64encode }}
  RHDH_CALLBACK_URL: {{ rhdh_callback_url | b64encode }}
  BACKEND_SECRET: {{ rhdh_backend_secret | b64encode }}
  ADMIN_TOKEN: {{ rhdh_admin_token | b64encode }}
  MCP_TOKEN: {{ rhdh_mcp_token | b64encode }}
  OLLAMA_TOKEN: {{ rhdh_ollama_token | default('') | b64encode }}
  OLLAMA_URL: {{ rhdh_ollama_url | default('') | b64encode }}
type: Opaque
