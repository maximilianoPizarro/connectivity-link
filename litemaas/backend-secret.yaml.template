apiVersion: v1
kind: Secret
metadata:
  name: backend-secret
  labels:
    app: backend
    component: api
type: Opaque
stringData:
  # Database Configuration
  database-url: postgresql://litemaas_admin:${PG_ADMIN_PASSWORD}@postgres:5432/litemaas_db?sslmode=disable
  # JWT Configuration
  jwt-secret: ${JWT_SECRET}
  # OAuth (URLs come from ConfigMap litemaas-cluster-config)
  oauth-client-id: ${OAUTH_CLIENT_ID}
  oauth-client-secret: ${OAUTH_CLIENT_SECRET}
  # Admin Configuration
  admin-api-keys: ${ADMIN_API_KEY}
  # LiteLLM Integration
  litellm-api-key: ${LITELLM_API_KEY}
